{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useKeyWithMouseEvents": "off"
      },
      "suspicious": {
        "noExplicitAny": "info",
        "noReactSpecificProps": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "useFilenamingConvention": "off"
      },
      "correctness": {
        "noNodejsModules": "off",
        "useImportExtensions": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "public/**/*",
      "docs/**/*"
    ]
  },
  "vcs": {
    "useIgnoreFile": true
  }
}